---
import Layout from "../layouts/Layout.astro";
import {
  detectUserLocale,
  createTranslationHelper,
  type Locale,
} from "../utils/i18n.ts";

const locale: Locale = detectUserLocale(Astro.request);
const t = await createTranslationHelper(locale);
---

<Layout client:load>
  <div class="flex flex-col bg-white dark:bg-zinc-900 relative min-h-screen">
    <div class="flex-1 min-h-screen relative z-10">
      <div
        class="flex flex-col items-center justify-center min-h-screen pt-20 pb-16 px-4"
      >
        <div class="text-center max-w-2xl mb-32 mx-auto">
          <h1
            class="text-6xl md:text-7xl font-bold text-zinc-900 dark:text-white mb-6 selection:bg-orange-500/25"
          >
            {t("NotFound.title")}
          </h1>
          <h2
            class="text-2xl md:text-3xl font-semibold text-zinc-700 dark:text-zinc-300 mb-4 selection:bg-orange-500/25"
          >
            {t("NotFound.subtitle")}
          </h2>
          <p
            class="text-lg text-zinc-600 dark:text-zinc-400 mb-8 leading-relaxed selection:bg-orange-500/25"
          >
            {t("NotFound.description")}
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
